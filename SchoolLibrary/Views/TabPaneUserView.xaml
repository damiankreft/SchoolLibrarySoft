<UserControl x:Class="SchoolLibrary.Views.TabPaneUserView"
             xmlns:Views="clr-namespace:SchoolLibrary.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl MinWidth="950" Height="Auto" VerticalAlignment="Bottom">
            <TabItem Header="Borrow book">
                <Grid Width="Auto">
                    <Views:BorrowBook></Views:BorrowBook>
                </Grid>
            </TabItem>
            <TabItem Header="Return book">
                <Grid>
                    <Views:ReturnBook></Views:ReturnBook>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
