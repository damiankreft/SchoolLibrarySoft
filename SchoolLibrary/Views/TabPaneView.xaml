<UserControl x:Class="SchoolLibrary.Views.TabPaneView"
             xmlns:Views="clr-namespace:SchoolLibrary.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl MinWidth="950">
            <TabItem Header="Remove book">
                <Grid Background="#FFE5E5E5" Width="Auto">
                    <Views:RemoveBookView></Views:RemoveBookView>
                </Grid>
            </TabItem>
            <TabItem Header="Add book">
                <Grid Background="#FFE5E5E5">
                    <Views:AddBookView></Views:AddBookView>
                </Grid>
            </TabItem>
            <TabItem Header="Edit book">
                <Grid Background="#FFE5E5E5">
                    <Views:EditBookView></Views:EditBookView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
