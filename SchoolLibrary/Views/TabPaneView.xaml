<UserControl x:Class="SchoolLibrary.Views.TabPaneView"
             xmlns:Views="clr-namespace:SchoolLibrary.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="Auto">
        <TabControl MinWidth="950" VerticalAlignment="Bottom" Height="Auto">
            <TabItem Header="Remove book">
                <Grid Width="Auto">
                    <Views:RemoveBookView></Views:RemoveBookView>
                </Grid>
            </TabItem>
            <TabItem Header="Add book">
                <Grid>
                    <Views:AddBookView></Views:AddBookView>
                </Grid>
            </TabItem>
            <TabItem Header="Edit book" Height="Auto">
                <Grid Height="Auto">
                    <Views:EditBookView Height="Auto"></Views:EditBookView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
